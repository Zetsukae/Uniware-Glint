{
  "name": "uniware-glint",
  "version": "1.0.0",
  "description": "Navigateur Web léger et rapide, basé sur Electron/Chromium",
  "author": "Zetsukae, Uniware",
  "main": "main.js",
  "scripts": {
    "start": "electron .",
    "dev": "electron .",
    "build": "electron-builder",
    "build:win": "electron-builder --win",
    "build:mac": "electron-builder --mac",
    "build:linux": "electron-builder --linux"
  },
  "devDependencies": {
    "electron": "^28.0.0",
    "electron-builder": "^24.0.0",
    "@types/react": "19.1.13",
    "@types/react-dom": "19.1.9",
    "@types/node": "24.5.2",
    "tailwindcss": "4.1.13",
    "typescript": "5.9.2",
    "postcss": "8.5.6"
  },
  "dependencies": {
    "@electron/remote": "^2.1.3",
    "motion": "^12.23.12",
    "path": "0.12.7",
    "fs": "0.0.1-security",
    "next": "15.5.3",
    "react": "19.1.1",
    "react-dom": "19.1.1",
    "class-variance-authority": "0.7.1",
    "clsx": "2.1.1",
    "lucide-react": "0.544.0",
    "tailwind-merge": "3.3.1",
    "tailwindcss-animate": "1.0.7"
  },
  "build": {
    "appId": "com.uniware.glint",
    "productName": "Uniware Glint",
    "directories": {
      "output": "dist",
      "buildResources": "assets"
    },
    "protocols": [
      {
        "name": "Uniware Glint",
        "schemes": [
          "uniware"
        ]
      }
    ],
    "files": [
      "main.js",
      "index.html",
      "script.js",
      "pages//*",
      "renderer.js",
      "styles.css",
      "assets//*",
      "node_modules//*",
      "!dist//*"
    ],
    "extraFiles": [
      {
        "from": "assets",
        "to": "assets",
        "filter": [
          "//*"
        ]
      }
    ],
    "mac": {
      "icon": "assets/icon.icns",
      "category": "public.app-category.productivity",
      "target": [
        {
          "target": "dmg",
          "arch": [
            "x64",
            "arm64"
          ]
        }
      ]
    },
    "win": {
      "icon": "assets/icon.ico",
      "target": [
        {
          "target": "nsis",
          "arch": [
            "x64",
            "ia32"
          ]
        }
      ]
    },
    "linux": {
      "icon": "assets/icon.png",
      "category": "Utility",
      "target": [
        {
          "target": "AppImage",
          "arch": [
            "x64"
          ]
        }
      ]
    },
    "nsis": {
      "oneClick": false,
      "allowToChangeInstallationDirectory": true,
      "shortcutName": "Uniware Glint",
      "createDesktopShortcut": true,
      "createStartMenuShortcut": true
    }
  }
}